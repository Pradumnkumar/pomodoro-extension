{
    "manifest_version" : 3,
    "name" : "Pomodoro Timer",
    "version": "1.0",
    "description" : "Time Your Work",
    "icons" : {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "action" : {
        "default_title" : "Pomodoro Timer default_title_Manifestjson",
        "default_popup": "popup/popup.html",
        "default_icon" : {
            "16": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        }
    },
    "permissions" : ["storage", "alarms", "notifications"],
    "background" : {
        "service_worker" : "background.js"
    },
    "options_page": "options/options.html"
}